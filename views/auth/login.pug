extends ../incontainer 

block content
  h1 Login
  script(src='https://www.google.com/recaptcha/api.js')
  if failed 
    .alert.alert-danger.
      That doesn't work, please try again.
  form(method='POST')
    .form-group
      label Username:
      input.form-control(name='username',type='text')
    .form-group
      label Password:
      input.form-control(name='password',type='password')
    .g-recaptcha(data-sitekey='6Lcbf3gUAAAAAIQjajxMjs3JKbVHpJ72KFnRv79u')
    br
    button.btn.btn-primary.btn-block(type='submit') Login
    br
  span
    a.btn.btn-link(href='/register', role='button') Create a new account
    a.btn.btn-link.float-right(href='/resetPassword', role='button') Forgot your password?
    
  