extends incontainer 

block content

    if (errors || failed)
        .alert.alert-danger
            span Whoops! We've found some error.
            ul
                if failed
                    li The current password is not correct
                each error in errors
                    li=error.msg

    form(method='POST')
        .row
            .col-2
                #dashboard
                    #outerBox.card
                        .panel
                            a(href='/settings/profile') Profile
                        .panel
                            a.active(href='#') Password
            .col-10
                #editable-contents
                    #outerBox.card
                        .card-body
                            h1 Password
                            #innerBox-card
                                .card-body
                                    h5 Current password:
                                    input.form-control(name='old_password',type='password')
                                    h5 New password:
                                    input.form-control(name='password',type='password')
                                    h5 Confirm:
                                    input.form-control(name='confirm',type='password')

                        button.btn.btn-outline-primary(type='submit') Save Changes