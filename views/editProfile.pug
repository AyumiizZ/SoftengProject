extends incontainer 

block content

    if (errors)
        .alert.alert-danger
            span Whoops! We've found some error.
            ul
                each error in errors
                    li=error.msg

    form(method='POST')
        .row
            .col-2
                #dashboard
                    #outerBox.card
                        .panel
                            a.active(href='#') Profile
                        .panel
                            a(href='/settings/password') Password    
            .col-10
                #editable-contents
                    #outerBox.card
                        .card-body
                            h1 Account
                            #innerBox.card
                                .row
                                    .col-3
                                        #innerBox.card
                                            .card-body
                                                h1 image here
                                    .col-9
                                        .card-body
                                            h5 Name:
                                            input.form-control(name='name',type='text', value=user.name)
                                            h5 Email:
                                            input.form-control(name='email',type='text', value=user.email)
                                            h5 Overview:
                                            if user.overview
                                                <textarea class="form-control" rows="5" name="overview">#{user.overview}</textarea>
                                            else
                                                <textarea class="form-control" rows="5" name="overview" placeholder="Say something about yourself!"></textarea>
                    
                        button.btn.btn-outline-primary(type='submit') Save Changes