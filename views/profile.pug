extends incontainer 

block content
  .row
    .col-3
      img.rounded.mb-3(src="https://via.placeholder.com/400x400", width="100%")
      h2 #{user.name}
      a(href='/settings/profile').btn.btn-outline-dark Edit
    .col-9
      .card.mb-3
        .card-body
          h3 Overview
          span #{user.overview}
      .card.mb-3
        .card-body
          h3 Past Jobs
          .card.mb-3
            .card-body
              h5 Job #1
              p Lorem Ipsum...
          .card.mb-3
            .card-body
              h5 Job #1
              p Lorem Ipsum...
      .card
        .card-body
          h3 Client Review
          each review, index in reviews
            .card
                .card-body
                  h5 #{reviewers[index].username}
                  .card
                    .card-body
                      h6 #{review.review}