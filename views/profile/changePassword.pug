extends ../incontainer 

block content
    if (errors || failed)
        .alert.alert-danger
            span Whoops! We've found some error.
            ul
                if failed
                    li The current password is not correct
                each error in errors
                    li=error.msg

    form(method='POST')
        .row
            .col-2
                a.list-group-item.list-group-item-action(href="profile") Profile
                a.list-group-item.list-group-item-action(href="account") Account
                a.list-group-item.list-group-item-action.active(href="password") Password
            .col-10
                #editable-contents
                    #outerBox.card
                        .card-body
                            h1 Password
                            #innerBox-card
                                .card-body
                                    .form-group
                                        label Current password:
                                        input.form-control(name='old_password',type='password')
                                    .form-group
                                        label New password:
                                        input.form-control(name='password',type='password')
                                    .form-group
                                        label Confirm:
                                        input.form-control(name='confirm',type='password')

                        button.btn.btn-outline-primary(type='submit') Save Changes